extends ../layout.pug

block content
    section.modal.modal--flex
        .popup.popup--new-publication.popup--flex
          .new-publication
            .new-publication__header
              h1 Новая публикация
              .new-publication__date-form
                h3 Дата публикации
                form(action='#' method='POST')
                  .new-publication__date-block
                    label(for='new-publication-date' aria-label='Календарь')
                    input#new-publication-date(type='text' name='login' placeholder=`${new Date(article.createdAt).toLocaleDateString()}`)
              button.new-publication__button.button.button--colored(type='submit' form='edit-form') Опубликовать
            button.popup__button.button.button--popup-close(type='button' aria-label='Закрыть окно') Закрыть окно
            .new-publication__form.form
              form#edit-form(action='/articles/edit' method='PUT' enctype='multipart/form-data')
                .form__wrapper.form__wrapper--intro
                  .form__field
                    label
                      input(type='text' placeholder='Заголовок' value=`${article.title}` required)
                  .form__field.form__field--post-image
                    label
                      input#image-name-field(type='text' value=`${article.picture ? article.picture : ''}` placeholder='Фотография' readonly)
                    .form__image-loader.form__image-loader--publication
                      label
                        input.visually-hidden(type='file')
                        | Обзор
                    button.button.button--transparent Удалить
                  div(style="padding-top: 30px")
                    each category, i in categories
                      - const isChecked = article.categories.some((it) => it.name === category.name)
                      .new-publication__checkbox.new-publication__checkbox--auto
                        input(
                          id=`checkbox-${i}`
                          type='checkbox'
                          name=`checkbox-${i}`
                          checked=isChecked
                          )
                        label(for=`checkbox-${i}`) #{category.name}
                    a.new-publication__form-link.button.button--transparent(href='/categories') Добавить категорию
                .form__wrapper.form__wrapper--text
                  .form__field.form__field--publication-text
                    label
                      textarea(rows='2' placeholder='Анонс публикации')
                        | #{article.announce}
                  .form__field.form__field--publication-text
                    label
                      textarea(rows='5' placeholder='Полный текст публикации')
                        | #{article.fullText}
        .modal__overlay

block scripts
  script(src='/js/vendor.js')
  script(src='/js/main.js')
